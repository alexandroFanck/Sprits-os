#!/bin/bash

mount -t proc none /proc
mount -t sysfs none /sys

echo "┌────────────────────────────────────────────────────────────────────────────────┐"
echo "|                                   Sprits OS                                  |"
echo "└────────────────────────────────────────────────────────────────────────────────┘"
/bin/cat << 'EOF' \
| sed 's/./\x1b[94m&\x1b[0m/g' \
| sed 's/\x1b\[94m#\x1b\[0m/\x1b[90m#\x1b[0m/g'

####################################################@@@@@@@@####################
####################@@++++++++++++mm############++++++++++++++++################
################@@++++++++++++++++++++++########++++++++++++++++++##############
##############++++++++++++++++++++++++++++######MM++++++++++++++++++############
############++++++++++++++++++++++++++++++++######++++++++++++++++++++##########
##########MM++++++++++++++++++++++++++++++++++####MM++++++++++++++++++MM########
##########++++++++++++++++++++++++++++++++++++@@####++++++++++++++++++++########
########@@++++++++++++++++++++++++++++++++++++++####++++++++++++++++++++########
########MM++++++++++++++++++++++++++++++++++++++####++++++++++++++++++++########
########MM++++++++++++++++++++++++++++++++++++++####++++++++++++++++++++@@######
########MM++++++++++++++++++++++++++++++++++++++####++++++++++++++++++++mm######
##########++++++++++mm############mm++++++++++++####++++++++++++++++++++########
##########++++++########################++++++######++++++++++++++++++++########
##########MM++########++++++++MM##########++++######++++++++++++++++++++########
##################++++++++++++++++mm##############MM++++++++++++++++++MM########
##############@@++++++++++++++++++mm##############++++++++++++++++++++##########
############@@++++++++++++++++++++##############++++++++++++++++++++MM##########
############++++++++++++++++++++##############MM++++++++++++++++++MM############
##########MM++++++++++++++++++mm##############mm++++++++++++++++@@##############
##########++++++++++++++++++++######++++##########mm++++++++MM######MM@@########
##########++++++++++++++++++++######++++++########################++++++########
##########++++++++++++++++++++####++++++++++++@@############@@++++++++++########
########MM++++++++++++++++++++####++++++++++++++++++++++++++++++++++++++mm######
########MM++++++++++++++++++++####++++++++++++++++++++++++++++++++++++++mm######
##########++++++++++++++++++++####++++++++++++++++++++++++++++++++++++++mm######
##########++++++++++++++++++++####++++++++++++++++++++++++++++++++++++++mm######
##########++++++++++++++++++++####@@++++++++++++++++++++++++++++++++++++########
##########MM++++++++++++++++++MM####++++++++++++++++++++++++++++++++++MM########
############++++++++++++++++++++######++++++++++++++++++++++++++++++++##########
##############++++++++++++++++++MM######++++++++++++++++++++++++++++############
################++++++++++++++++++########++++++++++++++++++++++MM##############
##################++++++++++++++++############mm++++++++++++MM##################
######################mmmmmmmm##################################################

EOF

ip link set up eth0
ip addr add 10.0.2.15/24 dev eth0
ip route add 10.0.2.2 dev eth0
ip route add 0/0 via 10.0.2.2 dev eth0

dnsmasq -uroot


exec /bin/bash
